<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.project.mapper.SysDictTypeMapper">

    <resultMap id="allDictMap" type="SysDictTypeEntity">
        <id property="id" column="sdtId"/>
        <result property="dictName" column="sdtDictName"/>
        <result property="dictType" column="dictType"/>
        <result property="status" column="status"/>
        <result property="remark" column="remark"/>
        <collection property="sysDictDataEntityList" javaType="java.util.List" resultMap="sysDictDataMap"/>
    </resultMap>

    <resultMap id="sysDictDataMap" type="SysDictDataEntity">
        <id property="id" column="sddId"/>
        <result property="dictSort" column="sddDictSort"/>
        <result property="dictLabel" column="sddDictLabel"/>
        <result property="dictValue" column="sddDictValue"/>
        <result property="dictType" column="sddDictType"/>
        <result property="cssClass" column="sddCssClass"/>
        <result property="listClass" column="sddListClass"/>
        <result property="isDefault" column="sddIsDefault"/>
        <result property="status" column="sddStatus"/>
        <result property="remark" column="sddRemark"/>
    </resultMap>

    <select id="allDict" resultMap="allDictMap">
        select
            sdt.id sdtId,
            sdt.dict_name sdtDictName,
            sdt.dict_type sdtDictType,
            sdt.status sdtStatus,
            sdt.remark sdtRemark,
            sdd.id sddId,
            sdd.dict_sort sddDictSort,
            sdd.dict_label sddDictLabel,
            sdd.dict_value sddDictValue,
            sdd.dict_type sddDictType,
            sdd.css_class sddCssClass,
            sdd.list_class sddListClass,
            sdd.is_default sddIsDefault,
            sdd.status sddStatus,
            sdd.remark sddRemark
        from sys_dict_type sdt left join sys_dict_data sdd on sdt.dict_type = sdd.dict_type
    </select>

</mapper>